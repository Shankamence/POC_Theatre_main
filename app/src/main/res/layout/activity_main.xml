<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    tools:context=".MainActivity">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="370dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/electrolize"
            android:text="See All ->"
            android:textColor="#F3EEEE"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/flipper"
            app:layout_constraintVertical_bias="0.0" />

        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView12"
            tools:layout_editor_absoluteX="16dp" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/spibanner"
            tools:layout_editor_absoluteY="-86dp" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#4d1f65"
                    android:src="@drawable/bp" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:background="#4d1f65"
                    android:src="@drawable/dunkirk" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:background="#4d1f65"
                    android:src="@drawable/jaws" />

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:background="#4d1f65"
                    android:src="@drawable/joker" />

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:background="#4d1f65"
                    android:src="@drawable/us" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />
                </HorizontalScrollView>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/electrolize"
            android:text="Movies"
            android:textColor="#F3EEEE"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flipper" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="154dp"
            android:layout_height="47dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="35dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="79dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#4d1f65"
                    android:src="@drawable/bp" />

                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:background="#4d1f65"
                    android:src="@drawable/dunkirk" />

                <ImageView
                    android:id="@+id/img8"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:background="#4d1f65"
                    android:src="@drawable/jaws" />

                <ImageView
                    android:id="@+id/img9"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:background="#4d1f65"
                    android:src="@drawable/joker" />

                <ImageView
                    android:id="@+id/img10"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:background="#4d1f65"
                    android:src="@drawable/us" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />
                </HorizontalScrollView>
            </LinearLayout>
        </HorizontalScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>